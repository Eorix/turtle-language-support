{
    "scopeName": "source.turtle",
    "patterns":
    [
        {
            "name": "comment.line.turtle",
            "match": "#.*$"
        },
        {
            "name": "keyword.operator.turtle",
            "match": "\\+|-|\\*|/|\\^"
        },
        {
            "name": "punctuation.definition.parenthesis.turtle",
            "match": "\\(|\\)"
        },
        {
            "name": "punctuation.definition.brace.turtle",
            "match": "\\{|\\}"
        },
        {
            "name": "punctuation.definition.comma.turtle",
            "match": ","
        },
        {
            "name": "keyword.control.turtle",
            "match": "(print|repeat|proc|call|set|home|quit|exit|color|up|down|forward|fw|backward|bw|position|pos|right|rt|left|lt|heading|hd)"
        },
        {
            "name": "constant.language.turtle",
            "match": "(red|green|blue|cyan|magenta|yellow|black|gray|white)"
        },
        {
            "name": "entity.name.function",
            "match": "(sin|cos|tan|sqrt|random)"
        },
        {
            "name": "constant.numeric.turtle",
            "match": "((0[Xx][0-9a-fA-F]*)|(((0|[1-9][0-9]*)\\.[0-9]*|(0|[1-9][0-9]*)?\\.[0-9]+|(0|[1-9][0-9]*))((e|E)(\\+|-)?[0-9]+)?))"
        },
        {
            "name": "variable.turtle",
            "match": "([A-Z][A-Z0-9]*|[a-zA-Z_][a-zA-Z0-9_]*)"
        }
    ],
    "repository": {}
}